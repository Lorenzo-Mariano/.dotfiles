layout {
    background-color "rgba(0,0,0,0.0)"
    gaps 8
    center-focused-column "never"
    default-column-width {}

    preset-column-widths {
        proportion 0.3
        proportion 0.5
        proportion 0.7
        proportion 1.0
    }

    preset-window-heights {
        proportion 0.3
        proportion 0.5
        proportion 0.7
        proportion 1.0
    }

    focus-ring {
        on
        width 3

        // - RGB hex: "#rgb", "#rgba", "#rrggbb", "#rrggbbaa"
        // - CSS-like notation: "rgb(255, 127, 0)", rgba(), hsl() and a few others.

        // Since Noctalia 3.5.0, this is no longer needed
        // to theme the focus ring and stuff GOATED update

        // ---- calli pink ----
